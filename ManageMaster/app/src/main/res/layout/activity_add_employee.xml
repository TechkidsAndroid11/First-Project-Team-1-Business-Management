<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgCover"
        android:background="#e4ff84"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>

    <ImageView
        android:id="@+id/ivAddImage"
        android:padding="15dp"
        android:src="@drawable/ic_add_circle_outline_black_24dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="#8edfd2"
        android:layout_width="100dp"
        android:layout_height="120dp" />

    <TableLayout
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:id="@+id/tableLayout"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/ivAddImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView
                android:textColor="@color/textColor"
                android:text="Name: "/>
            <EditText
                android:id="@+id/edtName"
                android:background="@drawable/custom_edit_text"
                android:layout_marginLeft="10dp"
                android:layout_height="30dp"
                android:layout_width="280dp"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="@color/textColor"
                android:text="Gioi Tinh: "/>

            <RadioGroup
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <RadioButton
                    android:textSize="13sp"
                    android:onClick="onRadioButtonClicked"
                    android:id="@+id/radio_nam"
                    android:text="Nam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:textSize="13sp"
                    android:layout_marginLeft="10dp"
                    android:onClick="onRadioButtonClicked"
                    android:id="@+id/radio_nu"
                    android:text="Nu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RadioGroup>
        </TableRow>

        <TableRow android:layout_marginTop="5dp">
            <TextView
                android:textColor="@color/textColor"
                android:text="Date of birth: "/>
            <EditText
                android:background="@drawable/custom_edit_text"
                android:id="@+id/edtDOB"
                android:layout_marginLeft="10dp"
                android:layout_height="30dp"
                android:layout_width="280dp"/>
        </TableRow>

        <TableRow android:layout_marginTop="5dp">
            <TextView
                android:textColor="@color/textColor"
                android:text="Que quan: "/>
            <EditText

                android:background="@drawable/custom_edit_text"
                android:id="@+id/edtHomeTown"
                android:layout_marginLeft="10dp"
                android:layout_height="30dp"
                android:layout_width="280dp"/>
        </TableRow>

        <TableRow android:layout_marginTop="5dp">
            <TextView
                android:textColor="@color/textColor"
                android:text="trinh do: "/>
            <EditText
                android:inputType="textMultiLine"
                android:background="@drawable/custom_edit_text"
                android:id="@+id/edtExp"
                android:layout_marginLeft="10dp"
                android:layout_height="60dp"
                android:layout_width="280dp"/>
        </TableRow>

        <TableRow android:layout_marginTop="5dp">
            <TextView
                android:textColor="@color/textColor"
                android:text="Group: "/>
            <EditText
                android:background="@drawable/custom_edit_text"
                android:id="@+id/edtGroup"
                android:layout_marginLeft="10dp"
                android:layout_height="30dp"
                android:layout_width="280dp"/>
        </TableRow>

        <TableRow android:layout_marginTop="5dp">
            <TextView
                android:textColor="@color/textColor"
                android:text="Luong: "/>
            <EditText
                android:background="@drawable/custom_edit_text"
                android:id="@+id/edtSalary"
                android:layout_marginLeft="10dp"
                android:layout_height="30dp"
                android:layout_width="280dp"/>
        </TableRow>

    </TableLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_marginTop="10dp"
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:src="@drawable/ic_done_white_24dp"
        android:layout_marginBottom="3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tableLayout"
        />


</RelativeLayout>